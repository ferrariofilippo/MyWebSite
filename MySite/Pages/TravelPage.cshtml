            <img src="Images/world.png" class="wrld" usemap="#countries" id="worldmap" alt="blank world map" onload="load_countries()"/>
            <map name="countries">
                <area shape="poly" alt="italy" href="https://en.wikipedia.org/wiki/Italy" coords="10,20,30,20,50,70" />
